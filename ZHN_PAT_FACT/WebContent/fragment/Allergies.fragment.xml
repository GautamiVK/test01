<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<Dialog title="{i18n>TXT_ALLERGIES_TABLE_TITLE}" contentWidth="100%"
		class="sapUiSizeCompact">
		<content>
			<Table id="ID_PAT_DASH_ALLERGIES_TABL" noDataText="{i18n>TXT_NO_INFORMATION_AVAILABLE}">

				<columns>
					<Column minScreenWidth="Phone" demandPopin="true" hAlign="Left" width="20%">
						<Text text="{i18n>TXT_AL_ALLERGY}" />
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
						<Text text="{i18n>TXT_COMMENTS}" />
					</Column>
					<!-- <Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
						<Text text="{i18n>TXT_AL_INDICATION_RESULT}" />
					</Column> -->
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
						<Text text="{i18n>TXT_PN_CREATOR}" />
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">
						<Text text="{i18n>TXT_PN_DATETIME}" />
					</Column>
					<Column minScreenWidth="Phone" demandPopin="true" hAlign="Right" width="10%">
						<Text text="" />
					</Column>
				</columns>
			</Table>

		</content>
		<beginButton>
			<Button text="{i18n>TXT_CLOSE}" app:dialogType="Allergies"
				press="onDialogClose" />
		</beginButton>
	</Dialog>

</core:FragmentDefinition>
<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

	<Dialog title="{i18n>TXT_RISKS_TABLE_TITLE}" contentWidth="50%" class="sapUiSizeCompact">
		<content>
			<Table id="ID_PAT_DASH_RISKS_TABL" noDataText="{i18n>TXT_NO_INFORMATION_AVAILABLE}">

				<columns>
					<Column minScreenWidth="Phone" demandPopin="true" hAlign="Left"
						width="70%">
						<Text text="{i18n>TXT_RI_RISK}" />
					</Column>
					<Column minScreenWidth="Phone" demandPopin="true" hAlign="Left"
						width="30%">
						<Text text="{i18n>TXT_DI_DATE}" />
					</Column>
				</columns>
			</Table>
			

		</content>
		<beginButton>
			<Button text="{i18n>TXT_CLOSE}" app:dialogType="Risks" press="onDialogClose" />
		</beginButton>
	</Dialog>

</core:FragmentDefinition>
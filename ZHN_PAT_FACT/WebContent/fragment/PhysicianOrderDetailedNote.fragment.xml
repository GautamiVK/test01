<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog showHeader="false" contentWidth="60%" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
		<subHeader>
			<Bar>
				<contentMiddle>
					<Text text="{i18n>TXT_PHYSICIAN_ORDER_DETAILED_NOTE}" />
				</contentMiddle>
			</Bar>
		</subHeader>
		<f:SimpleForm layout="ResponsiveGridLayout" class="sapUiSizeCompact">
			<f:content>
				<Label text="{i18n>TXT_PHYSICIAN_ORDER_DETAILED_NOTE_TASK}" />
				<Text text="{PhysicianOrderDetailedNoteModel>Taskname}" />
			</f:content>
		</f:SimpleForm>
		<f:SimpleForm maxContainerCols="2" layout="ResponsiveGridLayout"
			labelSpanL="6" labelSpanM="6" emptySpanL="0" emptySpanM="0" columnsL="2"
			columnsM="2" class="sapUiSizeCompact" editable="false">
			<f:content>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              
				<core:Title />
				<Label text="{i18n>TXT_PHYSICIAN_ORDER_DETAILED_NOTE_RESPONSIBLE_PERSON}" />
				<Text text="{PhysicianOrderDetailedNoteModel>RespPers}" />
				<Label text="{i18n>TXT_PHYSICIAN_ORDER_DETAILED_NOTE_CREATED_BY}" />
				<Text text="{SelectedPhysicianOrderDrModel>CreatorName}" />
				<Label text="{i18n>TXT_PHYSICIAN_ORDER_DETAILED_NOTE_CREATED_ON}" />
				<Text
					text="{path: 'SelectedPhysicianOrderDrModel>CreatedOn',  formatter: 'com.ril.hn.emrpatient.util.Formatter.getFormattedDateAndTime_Other'}" />

				<core:Title />
				<Label text="{i18n>TXT_PHYSICIAN_ORDER_DETAILED_NOTE_STATUS}" />
				<Text text="{SelectedPhysicianOrderDrModel>Status}" />
				<Label text="{i18n>TXT_PHYSICIAN_ORDER_DETAILED_NOTE_COMPLETED_BY}" />
				<Text text="{SelectedPhysicianOrderDrModel>CompleterName}" />
				<Label text="{i18n>TXT_PHYSICIAN_ORDER_DETAILED_NOTE_COMPLETED_ON}" />
				<Text
					text="{path: 'SelectedPhysicianOrderDrModel>CompletedOn',  formatter: 'com.ril.hn.emrpatient.util.Formatter.getFormattedDateAndTime_Other'}" />
			</f:content>
		</f:SimpleForm>
		<buttons>
			<Button text="{i18n>TXT_CLOSE}" press="onDialogClose" app:dialogType="PhysicianOrderDetailedNote"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>